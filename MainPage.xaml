<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CalculadoraBasica.MainPage">

    <StackLayout Orientation="Vertical">

        <Label Text="CALCULADORA" HorizontalOptions="Center" FontSize="Large"/>
        <Entry Placeholder="Ingrese Dato 1" x:Name=" txtD1"/>
        <Entry Placeholder="Ingrese Dato 2" x:Name=" txtD2"/>
        <Label Text="Seleccione Operacion" FontSize="Medium"/>
        <Picker x:Name="pkOper" SelectedIndexChanged="pkOper_SelectedIndexChanged"/>
        <Label Text="----------" FontSize="Medium" x:Name="lblRes"/>

    </StackLayout>

</ContentPage>
